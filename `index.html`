<script src="https://cdn.jsdelivr.net/npm/qr-code-styling@1.6.0-rc.1/lib/qr-code-styling.js"></script>
<script src="https://unpkg.com/@bundlr-network/client"></script>
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.2/dist/confetti.browser.min.js"></script>
<script>
new QRCodeStyling({width:300,height:300,data:location.href,image:"data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ü¶É</text></svg>",dotsOptions:{color:"#ff6b6b",type:"extra-rounded"},backgroundOptions:{color:"#fff"}}).append(document.getElementById("q"));

const m=document.getElementById("m"),st=document.getElementById("st"),v=document.getElementById("v"),s=document.getElementById("s");
const r=('SpeechRecognition' in window || 'webkitSpeechRecognition' in window) ? new (window.SpeechRecognition || webkitSpeechRecognition)() : null;
if(r){r.lang=navigator.language||'en-US';r.onresult=e=>m.value=e.results[0][0].transcript;r.onend=()=>v.textContent="Hold to speak";}
v.onmousedown=v.ontouchstart=e=> {e.preventDefault(); r?r.start():st.textContent="No mic, just type ‚ù§Ô∏è";}
v.onmouseup=v.ontouchend=()=>r&&r.stop();

s.onclick=async()=>{
  let t=m.value.trim(); if(!t)return st.textContent="Say something ‚ù§Ô∏è";
  st.textContent="Sending forever‚Ä¶";
  try{
    const b=new Bundlr("https://node2.bundlr.network","arweave");
    const tx=await b.upload(t+"\n‚Äî "+new Date().toISOString().slice(0,10),{tags:[{name:"App",value:"thankful-2025"}]});
    st.innerHTML=`Forever! <a href="https://arweave.net/${tx.id}" target="_blank">proof</a> ü¶É‚ú®`;
    m.value="";confetti({particleCount:200,spread:80,origin:{y:0.6}});
  }catch{e){st.textContent="Test mode ‚Äî still works! Refresh & try again.";}
};
</script>
